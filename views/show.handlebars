<h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{ restaurant.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ restaurant.location }}
        <a href="https://www.google.com.tw/maps/place/{{ restaurant.name }}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ restaurant.phone }}
      </p>

      <p class="mb-5">
        {{ restaurant.description }}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{ restaurant.image }}" alt="{{ restaurant.name }}"
        style="max-width: 600px;">

      <div style="display: flex; justify-content:space-between">
        <span>
          <a href="/"><button class="btn btn-secondary"><i class="fas fa-long-arrow-alt-left"></i></button></a>
        </span>
        <div>
          <span>
            <a href="/restaurants/{{ restaurant._id }}/edit"><button class="btn btn-primary"><i class="fas fa-pencil-alt"></i></button></a>
          </span>
          <form action="/restaurants/{{ restaurant._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
          </form>
        </div>        
      </div>
    </div>
  </div>
</div>