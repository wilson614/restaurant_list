<div style="width:500px; margin: 0 auto;">
  <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST" data-toggle="validator">
    <div style="display: flex;">
      <div>
        <div class="form-group" style="margin: 20px 20px 30px 0;">
          <label for="name">名稱</label>
          <input type="text" class="form-control mb-3" placeholder="name" name="name" id="name" value="{{ restaurant.name }}" required>
          <label for="name_en">英文名稱</label>
          <input type="text" class="form-control mb-3" placeholder="name_en" name="name_en" id="name_en" value="{{ restaurant.name_en }}">
          <label for="category">類別</label>
          <input type="text" class="form-control mb-3" placeholder="category" name="category" id="category" value="{{ restaurant.category }}" required>
          <label for="image">圖片網址</label>
          <input type="text" class="form-control mb-3" placeholder="http://..." name="image" id="image" value="{{ restaurant.image }}" required>
        </div>
      </div>
      <div>
        <div class="form-group" style="margin: 20px 20px 30px 0">
          <label for="location">地址</label>
          <input type="text" class="form-control mb-3" placeholder="location" name="location" id="location" value="{{ restaurant.location }}" required>
          <label for="phone">電話</label>
          <input type="text" class="form-control mb-3" placeholder="phone" name="phone" id="phone" value="{{ restaurant.phone }}" required>
          <label for="rating">評分</label>
          <input type="number" class="form-control mb-3" placeholder="1 ~ 5" name="rating" id="rating" value="{{ restaurant.rating }}" step="0.1" min="1" max="5" required>
          <label for="description">簡介</label>
          <input type="text" class="form-control mb-3" placeholder="description" name="description" id="description" value="{{ restaurant.description }}" required>
        </div>
        <div style="text-align: right; margin-right:20px;">
          <a href="/">
            <button type="button" class="btn btn-secondary">
              <i class="fas fa-long-arrow-alt-left"></i>
            </button>
          </a>
          <button type="submit" class="btn btn-success"><i class="fas fa-save"></i></button>
        </div>
      </div>
    </div>
  </form>
</div>